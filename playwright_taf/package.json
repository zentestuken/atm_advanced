  "bugs": {
    "url": "https://github.com/zentestuken/atm_advanced/issues"
  },
  "homepage": "https://github.com/zentestuken/atm_advanced#readme",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@eslint/json": "^0.13.1",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.0",
    "allure-playwright": "^3.3.3",
    "eslint": "^9.32.0",
    "eslint-plugin-playwright": "^2.2.2",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.4",

{
  "name": "playwright_taf_bdd",
  "version": "1.0.0",
  "description": "Playwright TAF for a Shopping cart app with Cucumber BDD tests",
  "main": "index.js",
  "scripts": {
    "generate-report": "allure generate artifacts/allure-results --clean -o artifacts/allure-report",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "pretest": "npm run lint-fix",
    "test": "cucumber-js",
    "test-checkout": "cucumber-js --tags @checkout",
    "get-report": "npm run generate-report && allure open artifacts/allure-report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zentestuken/atm_advanced.git"
  },
  "keywords": [
    "playwright",
    "Node.js",
    "test",
    "automation",
    "cucumber"
  ],
  "author": "Yauhen Viazau",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zentestuken/atm_advanced/issues"
  },
  "homepage": "https://github.com/zentestuken/atm_advanced#readme",
  "devDependencies": {
    "@cucumber/cucumber": "^12.1.0",
    "@cucumber/messages": "^28.1.0",
    "@cucumber/pretty-formatter": "^2.1.0",
    "@eslint/js": "^9.32.0",
    "@eslint/json": "^0.13.1",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.0",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.3.3",
    "allure-js-commons": "^3.3.3",
    "allure-playwright": "^3.3.3",
    "eslint": "^9.32.0",
    "eslint-plugin-playwright": "^2.2.2",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.4",
    "playwright": "^1.54.2",
    "wait-on": "^8.0.4"
  }
}
